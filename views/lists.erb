
<ul id="lists">
  <% sorted_lists(@lists) do |list, index| %>
    <li class="<%= class_complete?(index) %>" >
      <a href="/lists/<%= index %>"> 
        <h2> <%= list[:name] %> </h2>
        <p> 
          <%= count_incomplete(index)%> / 
          <%= count_total_todos(index) %> 
        </p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class="actions">
    <a class="add" href="/lists/new">Add a new list </a>
  </div>
<% end%>
